{% import '/templates/_macros.twig' as macros %}

<!DOCTYPE html>
<html lang="{{ lang }}" class="no-js">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>{{ site.name }}</title>
    <link rel="shortcut icon" href="{{ theme.link }}/assets/favicon.ico">

    {# iOS #}
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">

    {# OpenGraph #}
    <meta name="og:site"          content="{{ site.name }}">
    <meta name="og:url"           content="">
    <meta name="og:image"         content="">
    <meta name="og:description"   content="">
    <meta name="og:type"          content="website">

    {# Twitter #}
    <meta name="twitter:card"     content="summary_large_image">
    <meta name="twitter:site"     content="{# @handle #}">

    <link rel="stylesheet" href="{{ theme.link }}/dist/{{ ENV == 'production' ? 'main.min.css' : 'main.css' }}">
    <script type="text/javascript">
      // WebFontConfig = {
      //   google: { families: [ 'Source+Sans+Pro:700,500,400,300:latin' ] }
      // };
    </script>

    {{ wp_head }}
  </head>

  <body class="{% block body_class %}{{ body_classes|join(' ') }}{% endblock %}">

    <script type="text/javascript">
      /*(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-37257618-11', 'vanraemdonck.be');
      ga('send', 'pageview'); */
    </script>

    <main id="site-wrap" class="site-wrap" role="main">

      <header id="site-header" class="site-header navbar navbar-fixed-top" role="banner">
        <div class="container">
          <div id="site-logo" class="navbar-header">
            <a href="/" title="home" class="navbar-brand">{{ site.name }}</a>
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".main-menu">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <nav id="main-menu" class="main-menu navbar-collapse collapse" role="navigation">
            <ul class="nav navbar-nav navbar-right navbar-links">
              <li><a href="/about" class="menu-link {{ active('about') }}">product 1</a></li>
              <li><a href="/about" class="menu-link {{ active('about') }}">product 2</a></li>
              <li><a href="/about" class="menu-link {{ active('about') }}">product 3</a></li>
              <li class="nav-more-item">
                <a class="nav-more-link">more</a>
                <ul class="nav-more-list sub-menu">
                  <li><a href="/about" class="menu-link {{ active('about') }}">about</a></li>
                  <li><a href="/products" class="menu-link {{ active('products') }}">extra</a></li>
                  <li><a href="/contact" class="menu-link {{ active('contact') }}">contact</a></li>
                </ul>
              </li>
            </ul>
          </nav>
        </div>
      </header>

      <div id="site-content" class="site-content">

        {% block content %}

        {% endblock %}

      </div>

      <footer id="site-footer" class="site-footer" role="contentinfo">
        <div class="container">
          <div class="row">
            <div class="col-sm-4 col-sm-offset-8">
              <div class="pull-right">
                {{ macros.socials(_context) }}
              </div>
            </div>
          </div>
        </div>
        <div id="mnvr">
          <a class="inner" href="http://www.maneuver.be" target="_blank" title="site by maneuver"></a>
        </div>
      </footer>
    </main>

    <div id="outdated">
      <h6>Your browser is out-of-date!</h6>
      <p>Update your browser to view this website correctly. <a id="btnUpdateBrowser" href="http://outdatedbrowser.com/">Update my browser now </a></p>
      <p class="last"><a href="#" id="btnCloseUpdateBrowser" title="Close">&times;</a></p>
    </div>

    {# Expose to javascript. #}
    <script type="text/javascript">
      var MNVR = MNVR || {};
      MNVR.templateDir = "{{ theme.path }}";
      MNVR.forms = {{ mnvr_forms|default({})|json_encode }};
    </script>

    <script src="{{ theme.link }}/dist/{{ ENV == 'production' ? 'bundle.min.js' : 'bundle.js' }}"></script>
    <!--[if lt IE 9]>
      <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
    <![endif]-->

    {{ wp_footer }}
  </body>
</html>
