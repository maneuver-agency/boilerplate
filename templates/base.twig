{% set lang = 'en' %}

<!DOCTYPE html">
<!--[if lt IE 7]>      <html lang="{{ lang }}" class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="{{ lang }}" class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="{{ lang }}" class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="{{ lang }}" class="no-js"> <!--<![endif]-->
  <head>
    <title>{{ theme.sitename }}</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ theme.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <link rel="alternate" href="{{ theme.siteurl }}" hreflang="{{ lang }}" />
    <link rel="shortcut icon" href="{{ theme.link }}/assets/favicon.ico">

    <!-- ios -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="/assets/icon_128x128.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/icon_128x128.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/icon_128x128.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/icon_256x256.png" />

    <!-- windows 8 -->
    <meta name="application-name" content="{{ theme.sitename }}"/>
    <meta name="msapplication-TileColor" content="#aa936d"/>
    <meta name="msapplication-TileImage" content="/assets/metro-tile-icon.png"/>

    {% set ogdesc = theme.description %}
    {% set ogtitle = theme.sitename %}
    {% set ogimage = theme.link ~ '/assets/facebook.jpg' %}

    {# {% if record.contenttype.slug == 'projects' %}
      {% set ogdesc = record.body %}
      {% set ogtitle = record.title %}
      {% set ogimage = '/' ~ record.image %}
    {% endif %} #}

    <!-- facebook -->
    <meta property="og:site_name" content="{{ theme.sitename }}" />
    <meta property="og:title" content="{{ ogtitle }}" />
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="{{ theme.siteurl ~ ogimage }}" />
    <meta property="og:url" content="{{ theme.canonicalurl }}" />
    <meta property="og:description" content="{{ ogdesc }}">
    <meta property="fb:admins" content="666015894">

    <link rel="stylesheet" href="{{ theme.link }}/dist/main.css">
    <script src="{{ theme.link }}/dist/modernizr.js"></script>
    <script type="text/javascript">
      // WebFontConfig = {
      //   google: { families: [ 'Source+Sans+Pro:700,500,400,300:latin' ] }
      // };
    </script>
  </head>

  <body class="{% block body_class %}{{ body_classes|join(' ') }}{% endblock %}">

    <script type="text/javascript">
      /*(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-37257618-11', 'vanraemdonck.be');
      ga('send', 'pageview'); */
    </script>

    <main class="site-wrap" role="main">

      <header class="site-header navbar navbar-static-top" role="banner">
        <div class="container">
          <div id="site-logo" class="navbar-header">
            <a href="/" title="home" class="navbar-brand">{{ theme.sitename }}</a>
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".main-menu">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <nav id="main-menu" class="main-menu navbar-collapse collapse" role="navigation">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/about" class="{{ active('about') }}">about</a></li>
              <li><a href="/products" class="{{ active('products') }}">products</a></li>
              <li><a href="/contact" class="{{ active('contact') }}">contact</a></li>
            </ul>
          </nav>
        </div>
      </header>

      <div class="site-content">

        {% block content %}

        {% endblock %}

      </div>
      <div class="site-push"></div>
    </main>

    <footer class="site-footer" role="contentinfo">
      <div class="container">
        <div id="mnvr">
          <a class="inner" href="http://www.maneuver.be" target="_blank" title="site by maneuver"></a>
        </div>
      </div>
    </footer>

    <div id="outdated">
      <h6>Your browser is out-of-date!</h6>
      <p>Update your browser to view this website correctly. <a id="btnUpdateBrowser" href="http://outdatedbrowser.com/">Update my browser now </a></p>
      <p class="last"><a href="#" id="btnCloseUpdateBrowser" title="Close">&times;</a></p>
    </div>

    <script data-main="{{ theme.link }}/dist/main.js" src="{{ theme.link }}/dist/require.js"></script>
    <!--[if lt IE 9]>
      <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
    <![endif]-->
  </body>
</html>
