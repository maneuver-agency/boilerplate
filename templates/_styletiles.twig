{% extends '/templates/base.twig' %}

{% block body_class %}{{ parent() }} about{% endblock %}

{% block content %}

<style>
  .st-head {
    font-size:40px;
    font-weight: 900;
    margin:7vw 0 4vw;
    color:#666;
    padding-bottom: 2vw;
    border-bottom: 2px solid #eee;
  }
  .st-head-sub {
    font-size:28px;
    font-weight: 700;
    color:#aaa;
    margin-bottom: 4vw;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
  }
  .st-swatch {
    text-align: center;
    line-height: 50px;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 30px;
  }
  .st-swatch--dark {
    color: #444;
  }
</style>

<div class="container">

  {# ************** #}
  {# *** COLORS *** #}
  {# ************** #}

  <div class="page-section">
    <div class="st-head">Colors</div>

    <div class="row">
      <div class="col-sm-3">
        <div class="st-swatch bg-primary">
          <span>primary</span>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="st-swatch bg-secondary">
          <span>secondary</span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3">
        <div class="st-swatch st-swatch--dark bg-silver">
          <span>silver</span>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="st-swatch bg-iron">
          <span>iron</span>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="st-swatch bg-dark">
          <span>dark</span>
        </div>
      </div>
    </div>
  </div>

  {# ****************** #}
  {# *** TYPOGRAPHY *** #}
  {# ****************** #}

  <div class="page-section">
    <div class="st-head">Typography</div>
    <div class="st-head-sub">Bodytext</div>

    <div class="bodytext">
      <h2>Heading 2</h2>
      <h3>Heading 3</h3>
      <h4>Heading 4</h4>
      <p>
        Lorem ipsum dolor sit amet, <a href="#">consectetur adipisicing</a> elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
      </p>
      <ul>
        <li>list-item</li>
        <li>list-item</li>
        <li>list-item</li>
        <li>list-item</li>
      </ul>
    </div>
  </div>

  {# Titles #}

  <div class="page-section">
    <div class="st-head-sub">Titles</div>

    <div class="large-title">Large title</div>
    <div class="small-title">Small title</div>
  </div>


  {# *************** #}
  {# *** BUTTONS *** #}
  {# *************** #}

  <div class="page-section">
    <div class="st-head">Buttons</div>

    <p>
      <div class="btn btn-default">Default</div>
      <div class="btn btn-primary">Primary</div>
      <div class="btn btn-secondary">Secondary</div>
    </p>
    <p>
      <div class="btn btn-default btn-ghost">Default</div>
      <div class="btn btn-primary btn-ghost">Primary</div>
      <div class="btn btn-secondary btn-ghost">Secondary</div>
    </p>
  </div>

  <div class="page-section">
    <div class="st-head">Components</div>

    <div class="row">
      <div class="col-sm-6">
        <article class="teaser-item">
          <div class="teaser-item__image">
            <img src="https://placem.at/places?w=400&h=180&txt=0&random=1" class="img-responsive" alt="" />
          </div>
          <div class="teaser-item__title item-title">Teaser title</div>
          <div class="teaser-item__excerpt">{{ lipsum(20) }}</div>
        </article>
      </div>
    </div>
  </div>

</div>


{% endblock %}
